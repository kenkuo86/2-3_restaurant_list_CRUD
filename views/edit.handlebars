<div class="container mt-3">
  <form action="/restaurants" method="POST">
    <div class="form-group">
      <label for="name">餐廳名稱 Name</label>
      <input type="text" name="name" class="form-control" id="name" placeholder="輸入餐廳名稱" value={{restaurant.name}}>
    </div>
    <div class="form-group">
      <label for="name_en">餐廳英文名稱 English Name</label>
      <input type="text" name="name_en" class="form-control" id="name_en" placeholder="輸入餐廳英文名稱" value={{restaurant.name_en}}>
    </div>
    <div class="form-group">
      <label for="category">餐廳類別 Category</label>
      <input type="text" name="category" class="form-control" id="category" placeholder="輸入餐廳類別" value={{restaurant.category}}>
    </div>
    <div class="form-group">
      <label for="image">餐廳照片 Image</label>
      <input type="url" name="image" class="form-control" id="image" placeholder="輸入餐廳照片連結" value={{restaurant.image}}>
    </div>
    <div class="form-group">
      <label for="location">餐廳地址 Location</label>
      <input type="text" name="location" class="form-control" id="location" placeholder="輸入餐廳地址" value={{restaurant.location}}>
    </div>
    <div class="form-group">
      <label for="phone">餐廳聯絡電話 Phone</label>
      <input type="tel" name="phone" class="form-control" id="phone" placeholder="輸入餐廳電話" value={{restaurant.phone}}>
    </div>
    <div class="form-group">
      <label for="google_map">Google map 連結 Google map link</label>
      <input type="url" name="google_map" class="form-control" id="google_map" placeholder="輸入餐廳 Google map 連結" value={{restaurant.google_map}}>
    </div>
    <div class="form-group">
      <label for="rating">餐廳評分 Rating</label>
      <input type="text" name="rating" class="form-control" id="rating" placeholder="輸入餐廳評分" value={{restaurant.rating}}>
    </div>
    <div class="form-group">
      <label for="description">餐廳描述 Description</label>
      <input type="text" name="description" class="form-control" id="description" placeholder="輸入餐廳描述" value={{restaurant.description}}>
    </div>

    <button type="submit" class="btn btn-primary">建立新的餐廳</button>
  </form>
</div>